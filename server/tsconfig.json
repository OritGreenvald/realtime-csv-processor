
{
  "compilerOptions": {
    "target": "ES2019",

    "module": "CommonJS",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "noImplicitAny": true
  },

  "include": ["src/**/*.ts"],

  "exclude": ["node_modules", "dist"]
}
